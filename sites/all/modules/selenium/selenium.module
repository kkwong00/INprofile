  public function eventCtrlUp()       { send_modifier("U+E009", false); }
  public function eventShiftDown()    { send_modifier("U+E008", true); }
  public function eventShiftUp()      { send_modifier("U+E008", false); }
  public function eventAltDown()      { send_modifier("U+E00A", true); }
  public function eventAltUp()        { send_modifier("U+E00A", false); }
  public function eventCommandDown()  { send_modifier("U+E03D", true); }
